<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.andreibelous.ipcexamples">

    <application android:name=".App">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:process=":child1"
            android:theme="@style/Theme.IPCExamples">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".MyService"
            android:exported="false"
            android:process=":child2" />

        <provider
            android:name=".MyContentProvider"
            android:authorities="com.andreibelous.ipcexample"
            android:enabled="true"
            android:exported="false"
            android:process=":child3" />

        <receiver
            android:name=".MyReceiver"
            android:enabled="true"
            android:exported="false"
            android:process=":child4" />
    </application>
</manifest>